#include <iostream>
using namespace std;
int main()
{
    int n, k, l, i;
    float b, s;
    cin>>n;
    cout<<"k = ";
    cin>>k;
    cout<<"l = ";
    cin>>l;
    s=0;
    int a[n];
    for (i=0; i<n; i++)
    {
        cin>>a[i];
    }
    for (i=k; i<n; i++)
    {
        if(i<=l)
        {
            s=s+a[i];
        }
    }
    b=s/(l-k+1);
    cout<<b;
    return 0;
}
