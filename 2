#include <iostream>
using namespace std;
int main()
{
    int n, i, d;
    cin>>n;
    int a[n];
    for (i=0; i<n; i++)
    {
        cin>>a[i];
    }
    d=a[2]-a[1];
    for (i=1; i<n; i++)
    {
        if (a[i]-a[i-1]==d)
        {
            d=d;
        } else
        {
            d=0;
        }
    }
    cout<<d;
    return 0;
}
